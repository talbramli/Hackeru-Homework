{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "rootDir": "./ts",
    "outDir": "./src",
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "esnext"]
  }
}
